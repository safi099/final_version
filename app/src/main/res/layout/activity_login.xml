<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noumanch.selalf.First"
    android:background="@android:color/white"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/main_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basket your feelings"
        android:layout_below="@+id/main_image"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:id="@+id/label1"
        android:textColor="@color/buttonColors"
        android:layout_marginTop="0dp"
        />
    <ImageView

        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/center_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
         android:layout_centerInParent="true"
        android:src="@drawable/botle"
        android:layout_below="@id/label1"

        />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/center_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/select_country"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        >
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="English"
        android:textColor="@android:color/white"
        android:layout_marginRight="4dp"
        android:id="@+id/english_btn"
        android:background="@drawable/selector_for_button"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="18dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_for_button"
        android:textColor="@android:color/white"
        android:layout_marginLeft="4dp"
        android:id="@+id/arabic_btn"
        android:textAllCaps="false"
        android:text="عربي"
        android:textStyle="bold"
        android:textSize="18dp"
        />
    </LinearLayout>
</RelativeLayout>

